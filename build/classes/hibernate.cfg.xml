<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property> 
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property> <!--  Driver -->
        <property name="hibernate.connection.url">jdbc:mysql://localhost/gerasenhas</property> <!--  EndereÃ§o do Banco + Banco a serutilizado -->
        <property name="hibernate.connection.username">root</property> <!-- Login de usuario do banco -->
        <property name="hibernate.connection.password"></property> <!--  Senha do banc0o -->
        <property name="show_sql">true</property>		
        <mapping class="br.com.geraunity.model.Aluno" />  <!--  Mapeamento dos modelos -->
    <mapping class="br.com.geraunity.model.Funcionario" />
     <mapping class="br.com.geraunity.model.Senha" />
    </session-factory>
</hibernate-configuration>
